<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollViewResumo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutResumo"
        android:layout_margin="10dp">

        <GridLayout
            android:rowCount="3"
            android:columnCount="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:background="#C0D9D9">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Segunda-Feira"
                android:padding="3dp"
                android:layout_column="0"
                android:layout_row="0"
                android:background="@color/colorAccent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Algoritmos 1"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_margin="3dp"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btnInfoPresenca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informar presenÃ§a"
                android:background="@color/colorPrimaryDark"
                android:textColor="#FFFFFF"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="center"
                android:padding="15dp"
                android:textSize="12sp"
                android:textAllCaps="false"/>

            <ImageButton
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="right|center"
                android:layout_row="2"
                android:onClick="mostrarMenu"
                android:src="@drawable/menu" />

        </GridLayout>
    </LinearLayout>
</ScrollView>
